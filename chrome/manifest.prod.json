{
  "version": "0.6.1",
  "name": "Giphub",
  "manifest_version": 2,
  "description": "Quickly add GIFs to your GitHub comments",
  "browser_action": {
    "default_title": "Giphub",
    "default_icon": {
      "16": "img/icon-16.png",
      "32": "img/icon-32.png"
    }
  },
  "applications": {
    "gecko": {
      "id": "{9946ab6b-28af-4e04-a523-30cf62f395d1}"
    }
  },
  "icons": {
    "16": "img/icon-16.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },
  "background": {
    "page": "background.html"
  },
  "permissions": [
    "tabs",
    "https://github.com/*"
  ],
  "content_security_policy": "default-src 'self' https://api.giphy.com; script-src 'self'; style-src * 'unsafe-inline'; img-src 'self' data:;"
}
